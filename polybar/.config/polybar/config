[module/spotify]
type = custom/script
interval = 1
format-prefix = " "
format = <label>
exec = python ~/.config/polybar/polybar-spotify/spotify_status.py -t 16 -f '{play_pause} {artist} - {song}' -p ','
format-underline = #1db954

