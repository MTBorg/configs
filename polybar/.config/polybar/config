[modules]
; TODO: Change this to include-directory when it is released in polybar
; 3.5.0. See https://github.com/polybar/polybar/wiki/Configuration#file-inclusion
include-file=$XDG_CONFIG_HOME/polybar/modules/cpu
include-file=$XDG_CONFIG_HOME/polybar/modules/memory
include-file=$XDG_CONFIG_HOME/polybar/modules/i3
include-file=$XDG_CONFIG_HOME/polybar/modules/bspwm
include-file=$XDG_CONFIG_HOME/polybar/modules/xbacklight
include-file=$XDG_CONFIG_HOME/polybar/modules/backlight_acpi
include-file=$XDG_CONFIG_HOME/polybar/modules/network
include-file=$XDG_CONFIG_HOME/polybar/modules/wlan
include-file=$XDG_CONFIG_HOME/polybar/modules/eth
include-file=$XDG_CONFIG_HOME/polybar/modules/date
include-file=$XDG_CONFIG_HOME/polybar/modules/volume
include-file=$XDG_CONFIG_HOME/polybar/modules/battery
include-file=$XDG_CONFIG_HOME/polybar/modules/temperature
include-file=$XDG_CONFIG_HOME/polybar/modules/spotify
include-file=$XDG_CONFIG_HOME/polybar/modules/bluetooth
include-file=$XDG_CONFIG_HOME/polybar/modules/fan

[colors]
; Remove the alpha channel of the background color if flimmer occurrs
background = #55000000
background-alt = ${xrdb:color0:#444}
foreground = ${xrdb:color7:#00ff00}
foreground-alt = ${xrdb:color7:#555}
primary = ${xrdb:color1:#ffb52a}
secondary = ${xrdb:color2:#e60053}
alert = ${xrdb:color3:#bd2c40}

border = #1f1f1f
highlighted_foreground = #00ff88
highlighted_background = #1f1f1f

workspace_background = #88000000

date_underline = #0b3d97

[bar/base]
monitor = ${env:MONITOR:eDP1}
width = 100%
height = 2%
offset-x = 0
offset-y = 0
radius = 0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-size = 0
border-color = #00000000

padding-left = 0
padding-right = 0

module-margin-left = 0
module-margin-right = 1

font-0 = FiraCode Nerd Font:style=Regular:size=12:antialias=true;0

tray-position = right
tray-padding = 2
tray-background = ${colors.background}

wm-restack = bspwm

;override-redirect = true

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize

[bar/laptop]
inherit = bar/base

modules-left = bspwm
modules-center = 
modules-right = system-bluetooth-bluetoothctl spotify xbacklight volume memory temperature cpu wlan eth battery date

[bar/desktop]
inherit = bar/base

modules-left = bspwm
modules-center = 
modules-right = xbacklight volume fan memory temperature cpu eth date

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
pseudo-transparency = true

[global/wm]
margin-top = 0
margin-bottom = 0

