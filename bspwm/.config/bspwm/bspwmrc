#! /bin/sh

bspc config border_width         0
bspc config window_gap          12

bspc config split_ratio          0.52
bspc config borderless_monocle   true
bspc config gapless_monocle      true

bspc monitor -d 1 2 3 4 5 6 7 8 9 0

setxkbmap se #Set keyboardlayout


# Startup programs
SXHKD_CONFIGS=~/.config/sxhkd/bspwm.sxhkdrc #Alter this to switch wm
SXHKD_SHARED=~/.config/sxhkd/sxhkdrc #This contains non wm-dependent keybinds
[ $(pidof sxhkd | awk '{print $1}') ] && pkill -USR1 sxhkd \
  || sxhkd -c $SXHKD_CONFIGS $SXHKD_SHARED &

# For some reason picom freezes when receiving a USR1 signal.
# This is a temporary workaround
killall -q picom
picom &
# [ $(pidof picom) ] &&
# 	pkill -USR1 picom ||
# 	picom &

volnoti &
xss-lock -- i3lock --fuzzy -o &
$XDG_CONFIG_HOME/polybar/launch.sh
wal -R
unclutter &
